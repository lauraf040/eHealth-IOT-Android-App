<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAEAF1"
    android:orientation="vertical"
    tools:context=".fragments.DoctorDetailsFragment">


    <LinearLayout
        android:id="@+id/linear_doctor_details_top"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#E5F8FC"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_doctor_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/arrow" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/doctor_details_iv_photo"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:srcCompat="@drawable/doctor1">

        </com.google.android.material.imageview.ShapeableImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:id="@+id/tv_doctor_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/merriweathebold"
                android:text="DOCTOR NAME"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_doctor_details_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/italianaregular"
                android:text="Category"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_doctor_details_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/italianaregular"
                android:text="AGE"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear_doctor_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_doctor_details_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rating"></com.google.android.material.imageview.ShapeableImageView>

                <TextView
                    android:id="@+id/tv_doctor_details_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/merriweathebold"
                    android:text="4.5 "
                    android:textColor="@color/md_theme_light_secondary"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merriweathebold"
                    android:text="Rating "
                    android:textAlignment="textStart"
                    android:textColor="@color/md_theme_light_secondary"></TextView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/doctor_cardview"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frame_layout_doctor_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
        </ScrollView>


    </LinearLayout>


</LinearLayout>