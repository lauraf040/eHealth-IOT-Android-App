<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primar_color</item>
        <item name="colorPrimaryDark">@color/light_blue</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/kronaoneregular</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/primar_color</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxStrokeColor">@color/primar_color</item>
    </style>

    <style name="textInputUnderline" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/primar_color</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxStrokeColor">@color/primar_color</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/bg_blue_button</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerHintText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="circularIv" parent="parent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="home_doctor_cardview" parent="parent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">25%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>