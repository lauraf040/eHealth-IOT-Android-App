<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryDark">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorAccent">@color/md_theme_light_tertiary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:fontFamily">@font/kronaoneregular</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/md_theme_light_primary</item>
        <item name="boxBackgroundColor">@color/md_theme_light_onPrimary</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxStrokeColor">@color/md_theme_light_primary</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/button_background_blue</item>
        <item name="android:textColor">@color/md_theme_light_onSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerHintText" parent="parent">
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:textColor">@color/md_theme_light_tertiary</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="roundedIv" parent="parent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>